<!--pages/scrollView/scrollView.wxml-->
<view>scroll-view组件</view>

<!-- 1.scroll-x水平滚动 -->
<view>水平滚动scroll-x</view>
<scroll-view class="container1" scroll-x>
  <view wx:for="{{5}}" class="item1">{{item}}</view>
</scroll-view>

<!-- 2.scroll-y垂直滚动 -->
<view>垂直滚动scroll-y</view>
<scroll-view class="container2" scroll-y>
  <view wx:for="{{5}}" class="item2">{{item}}</view>
</scroll-view>

<!-- 3.bindscroll绑定滚动 -->
<view>绑定滚动</view>
<scroll-view 
  class="container2" 
  scroll-y
  bindscroll="handleScroll">
  <view wx:for="{{5}}" class="item2">{{item}}</view>
</scroll-view>