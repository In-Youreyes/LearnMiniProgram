<view>-------------block标签--------------</view>
<block wx:if="{{isShow}}" wx:key="index">
  <button>按钮</button>
  <view>嘿嘿嘿</view>
  <text>内容</text>
</block>
<view class="br"></view>

<block wx:for="{{3}}" class="box" wx:key="id">
  <button>按钮</button>
  <view>呵呵呵</view>
  <text>内容</text>
</block>
<view class="br"></view>

<!-- item、index起别名 -->
<view wx:for="{{movies}}" 
      wx:for-item="movie"
      wx:for-index="id" wx:key="id">{{movie}} {{id}}</view>
<view class="br"></view>

<!-- 多层遍历 -->
<block wx:for="{{numbers}}"
       wx:for-item="inner_numbers"
       wx:for-index="num_id" 
       wx:key="{{num_id}}">
  <block wx:for="{{inner_numbers}}" wx:key="{{index}}">
    <view>{{item}}</view>
  </block>
</block>
<view class="br"></view>

