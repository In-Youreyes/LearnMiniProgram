<view>时间: {{time}}</view>
<view>Date()当天日期: {{nowTime}}</view>
<view>toString当天日期: {{nowTime1}}</view>
<view>toDateString日期部分: {{nowTime2}}</view>
<view>toLocaleString日期对象: {{nowTime3}}</view>
<view>toLocaleDateString日期部分: {{nowTime4}}</view>
<view>getDate日期: {{nowTime5}}</view>
<view>getDay星期: {{nowTime6}}</view>
<view>getTime毫秒: {{nowTime7}}</view>
<view class="br"></view>
<button size="mini" bindtap="handleSwitchColor">切换颜色</button>
<view class="box {{isActive ? 'active' : ''}}">颜色改变</view>
<view class="br"></view>

<view>----------条件判断-------------</view>
<!-- wx:if使用 -->
<button size="mini" bindtap="handleSwitchShow">按钮</button>
<view wx:if="{{false}}">哈哈哈</view>
<view wx:if="false">哈哈哈</view>
<view wx:if="{{isShow}}">哈哈哈</view>

<!-- wx:elif/wx:else -->
<button size="mini" bindtap="handleIncrement">加分</button>
<view wx:if="{{score >= 90}}">优秀</view>
<view wx:elif="{{score >= 80}}">良好</view>
<view wx:elif="{{score >= 60}}">及格</view>
<view wx:else="{{score < 60}}">不及格</view>

<!-- hidden属性 -->
<view hidden>hidden内容</view>
<view class="br"></view>

<!-- wx:if和hidden隐藏组件区别 -->
<!-- hidden隐藏的组件依然存在display:none(切换频率高时使用)
      wx:if隐藏的组件根本不在 -->
<view hidden="{{true}}">hidden内容</view>
<view wx:if="{{false}}">wx:if内容</view>
<view class="br"></view>

