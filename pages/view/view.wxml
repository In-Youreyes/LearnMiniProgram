<!--pages/view/view.wxml-->
<view>view组件</view>

<!-- view的基本使用 -->
<view class="view-title">view的基本使用</view>
<view class="box">view组件</view>
<view>view组件</view>

<!-- 1.hover-class按下时候的显示样式 -->
<view class="view-title">hover-class按下时</view>
<view class="box1">view组件</view>
<view class="box1" hover-class="hover-view">view组件</view>

<!-- 2.hover-stop-propagation是否冒泡,阻止祖先点击态 -->
<view class="view-title">hover-stop-propagation是否冒泡</view>

<view class="box2" hover-class="box2-hover">view父级组件
  <view class="box1"
        hover-class="hover-view">view组件</view>
</view>
<view class="box2" hover-class="box2-hover">view父级组件
  <view class="box1" 
        hover-class="hover-view"
        hover-stop-propagation="true">view组件</view>
</view>

<!-- 3.hover-start-time和hover-stay-time延时操作 -->
<view class="view-title">hover-start-time按住后多久出现点击态，默认50。
hover-stay-time松开后点击态保留时，默认400。单位毫秒</view>
<view class="box1" hover-class="hover-view">view组件</view>
<view class="box1" hover-class="hover-view"
      hover-start-time="200">view组件</view>
<view class="box1" hover-class="hover-view"
      hover-stay-time="{{0}}">view组件</view>
