<!--pages/input/input.wxml-->
<view>input组件</view>

<!-- 1.value input中的值 -->
<input value="值"/>

<!-- 2.type决定键盘类型(英文，数字，特殊字符等) -->
<!-- text	文本输入键盘
     number	数字输入键盘	
     idcard	身份证输入键盘	
     digit	带小数点的数字键盘 -->
<input type="text"/>
<input type="number"/>
<input type="idcard"/>
<input type="digit"/>

<!-- 3.password暗文 -->
<input password/>

<!-- 4.placeholder输入框为空时显示内容 -->
<input placeholder="输入框为空时显示内容"/>

<!-- 5.confirm-type设置键盘右下角文字，仅在type="text"有效 -->
<!-- send	右下角按钮为“发送”	
     search	右下角按钮为“搜索”	
     next	右下角按钮为“下一个”	
     go	右下角按钮为“前往”	
     done	右下角按钮为“完成” -->
<input confirm-type="send"/>
<input confirm-type="search"/>
<input confirm-type="next"/>
<input confirm-type="go"/>
<input confirm-type="done"/>

<!-- 6.input绑定事件 -->
<!-- bindkeyboardheightchange键盘高度发生变化触发 -->
<input placeholder="绑定事件"
       bindinput="handleInput"
       bindfocus="handleFocus"
       bindblur="handleBlur"
       bindconfirm="handleConfirm"/>
