<!--pages/home/home.wxml-->
<text class="title">hello world</text>
<button size="mini">按钮</button>
<view class="br"></view>

<button bindtap="handleClick" size="mini">按钮</button>
<button bind:tap="handleClick" size="mini">按钮</button>
<button catch:tap="handleClick" size="mini">按钮</button>
<view class="br"></view>

<!-- 常见事件 -->
<view class="box"
      bind:touchstart="handleTouchStart"
      bind:touchmove="handleTouchNove"
      bind:touchend="handleTouchEnd"
      bind:tap="handleTap"
      bind:longpress="handleLongpress"></view>

<!-- 事件对象的分析 -->
<button id="btn" size="mini"
        bindtap="handleEvent"
        bindtouchend="handleEventEnd">事件对象</button>
<view class="br"></view>

<view>target和currentTarget区别</view>
<view id="outer" class="outer" bindtap="handleOuter">
  外层的view
  <view id="inner" class="inner" bindtap="handleInner">内层的view</view>
</view>

<!-- 事件的传递参数 -->
<view class="container">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="item"
          bindtap="handleItemClick"
          data-index="{{index}}"
          data-item="{{item}}">{{item}}</view>
  </block>
</view>
<view class="br"></view>

<!-- 事件冒泡和事件捕获，bind和catch的区别 -->
<!-- bind会一层层传递 -->
<view class="view1" capture-bind:tap="handleCapture1
      bindtap="handleBindView1">
  <view class="view2" capture-bind:tap="handleCapture2
      bindtap="handleBindView2">
    <view class="view3" capture-bind:tap="handleCapture3
      bindtap="handleBindView3"></view>
  </view>
</view>
<view class="br"></view>

<!-- catch会阻止事件的传递 -->
<view class="view1" capture-bind:tap="handleCapture1
      bindtap="handleBindView1">
  <view class="view2" capture-bind:tap="handleCapture2
      catchtap="handleBindView2">
    <view class="view3" capture-bind:tap="handleCapture3
      bindtap="handleBindView3"></view>
  </view>
</view>