<!--pages/home/home.wxml-->
<text class="title">hello world</text>
<button size="mini">按钮</button>

<!-- navigator页面跳转 -->
<navigator url="/pages/detail/detail">跳到详情页</navigator>
<!-- navigator属性 open-type -->
<navigator url="/pages/detail/detail"
           open-type="redirect">
  跳到详情页(redirect)
</navigator>

<navigator url="/pages/about/about"
           open-type="switchTab">
  跳到关于页(switchTab)
</navigator>

<navigator url="/pages/detail/detail"
           open-type="reLaunch">
  跳到详情页(reLaunch)
</navigator>
<view class="br">----------------------------------</view>

<!-- 跳转过程中数据的传递 -->
<navigator url="/pages/detail/detail?name=chen&age=18&height=188">传递数据</navigator>
<view>{{title}}</view>
<view class="br">----------------------------------</view>

