<!-- 组件中监听生命周期函数 -->
<button size="mini" bind:tap="handleChangeShow">切换显示</button>
<block wx:if="{{isShow}}">
  <comp-mslot>
    <button size="mini" slot="slot2">插入的按钮</button>  
    <slider slot="slot3"/>
    <text slot="slot1">多个插槽的文本</text>
  </comp-mslot>
</block>


