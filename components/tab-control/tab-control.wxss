/* components/tab-control/tab-control.wxss */

.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background-color: rgba(228, 220, 207, 0.034);
}

.tab-item {
  flex: 1;
  text-align: center;
}

.active {
  color: red;
}

.active text {
  padding: 20rpx 16rpx;
  border-bottom: 6rpx solid red;
}
